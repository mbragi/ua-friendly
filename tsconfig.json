{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "emitDeclarationOnly": true
  },
  "include": ["index.js", "lib/**/*.js"],
  "exclude": ["node_modules", "examples"]
}
